        <TextBox HorizontalAlignment="Left" Height="23" Margin="302,246,0,0" TextWrapping="Wrap" x:Name="MestoBT" VerticalAlignment="Top" Width="271"/>
        <DatePicker HorizontalAlignment="Left" Margin="302,163,0,0" VerticalAlignment="Top" Width="271" Height="39" x:Name="DataZak"/>
